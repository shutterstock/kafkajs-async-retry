{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "rootDir": "./src",
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "declaration": true,
    "outDir": "./dist",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./dist"]
}
